<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llDisplaySettings"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/my_background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/tvDisplaySize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/display_choose_size"
        android:textSize="@dimen/text_size_main"
        android:textStyle="bold" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbRadio14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="14"
            android:textSize="@dimen/buttons_size"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbRadio16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="16"
            android:textSize="@dimen/buttons_size"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbRadio18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="18"
            android:textSize="@dimen/buttons_size"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbRadio20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="20"
            android:textSize="@dimen/buttons_size"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbRadio22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="22"
            android:textSize="@dimen/buttons_size"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbRadio24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="24"
            android:textSize="@dimen/buttons_size"
            android:textStyle="bold" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbRadio26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="26"
            android:textSize="@dimen/buttons_size"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbRadio28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="28"
            android:textSize="@dimen/buttons_size"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbRadio30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="30"
            android:textSize="@dimen/buttons_size"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbRadio32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="32"
            android:textSize="@dimen/buttons_size"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbRadio34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="34"
            android:textSize="@dimen/buttons_size"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbRadio36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="36"
            android:textSize="@dimen/buttons_size"
            android:textStyle="bold" />
    </RadioGroup>

</LinearLayout>