<resources xmlns:tools="http://schemas.android.com/tools">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="buttonsStyle" parent="android:Widget.Holo.Light.Button">
        <item name="android:textSize">@dimen/buttons_size</item>
    </style>

    <style name="textInSettingsHeadingsStyle" parent="android:Widget.Holo.Light.TextView">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">true</item>
        <item name="android:accessibilityHeading" tools:targetApi="p">true</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textSize">@dimen/text_heading_settings_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_radio_buttons_in_settings">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textSize">@dimen/text_size_main</item>
    </style>

</resources>
